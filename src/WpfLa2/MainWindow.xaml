<Window x:Class="WpfLa2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLa2"
        xmlns:c="clr-namespace:WpfLa2"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="350">
    <Window.Resources>
        <c:MainVm x:Key="cx"/>
    </Window.Resources>
        <StackPanel 
            DataContext="{Binding Source={StaticResource cx}}"
            Background="{Binding Color}"
            >
            <Label 
                Content="{Binding Message}"
                FontSize="32"
                />
            
            <Label 
                Content="{Binding Hp}"
            />
            <Button
                Command="{Binding StartMacroCommand}"
                    Width="150" Height="30">
                Start IIS macro
            </Button>
            <Button
                Command="{Binding MarkupCommand}"
                    Width="150" Height="30">
                La Window markup
            </Button>
        </StackPanel>
    
</Window>
